<body>
  <header class="main-header">
    <!-- Top Nav bar -->
    <img src="/lhl-votr/media/Votr Logo.png" href="index.ejs" class="logo"></img>
    <nav class="main-nav">
      <div class="main-nav-container">
        <ul class="main-nav-list">
          <li><a class="main-nav-link" href="/lhl-votr/views/index.ejs">Home</a></li>
          <li><a class="main-nav-link" href="/lhl-votr/views/polls.ejs">Polls</a></li>
        </ul>
      </div>
    </nav>
  </header>
  <!-- Polls Form -->
  <section class="form-section">
    <div class="form-container">


      <form class="form" id="form" action="/polls/polls" method="POST">

        <input class="activity" type="text" name="choice" placeholder="Activity">
        <textarea class="activity-description" name="description" placeholder="Enter activity description"></textarea>
        <input class="user-email" type="text" name="email" placeholder="Email">
        <div class="button-container"> <button class="add-choice">Add Choice</button>
          <button class="submit">Submit</button>
        </div>

      </form>


    </div>
    <div class="polls-image-box">
      <img class="polls-image" src="/lhl-votr/media/polls-image.svg" alt="Statistics image">

    </div>
  </section>





  <!-- FOOTER SECTION -->
